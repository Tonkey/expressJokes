extends layout

block content

    h1 Login
    form(name="login-form", method="post")
        div.input
            span.label Username:
            input(type="text", name="userName", placeholder="username", onkeyup="if(this.value.length > 0) document.getElementById('submit').disabled = false; else document.getElementById('submit').disabled = true")
        div.actions
            input(type="submit", value="Login", id='submit' disabled)